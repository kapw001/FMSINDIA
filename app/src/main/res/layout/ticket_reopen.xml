<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="#e4e4e4"
        android:fillViewport="false"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"

                card_view:cardCornerRadius="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.fms.fmsindia.plugins.CustomTextView
                        android:id="@+id/addTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/prescription_edit_fullInfo"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#919191"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#cccdce"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/ticketNoDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Ticket No *"

                                android:imeOptions="actionNext"

                                android:text="TT109"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/issueDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Issue *"

                                android:imeOptions="actionNext"

                                android:text="Water tank leakage"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/CategoryDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Category*"

                                android:imeOptions="actionNext"

                                android:text="Plumbimg"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/PriorityDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Priority *"

                                android:imeOptions="actionNext"

                                android:text="Low"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/targetDateDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="Creation Date *"
                                android:imeOptions="actionNext"
                                android:text="2016-08-26"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay5"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/preferredCallTimeDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Preferred Date TO Attend *"

                                android:imeOptions="actionNext"

                                android:text="12:00 AM"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ticketNoLay6"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.fms.fmsindia.plugins.CustomEditext
                                android:id="@+id/preferredTimeToAttendDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:hint="Preferred Time To Attend *"

                                android:imeOptions="actionNext"

                                android:text="12:00 AM"
                                android:textColorHint="#000000"
                                android:textSize="16dp" />
                        </android.support.design.widget.TextInputLayout>
                        <com.fms.fmsindia.plugins.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dp"
                            android:text="Reason For Reopen"
                            />
                        <com.fms.fmsindia.plugins.CustomEditext
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/description"
                            android:background="@drawable/mybutton2"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ticketOpen"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">
            <com.fms.fmsindia.plugins.CustomButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:text="Submit"
                android:textColor="#ffffff"
                android:background="@drawable/border"
                android:id="@+id/reopenTicket"

                />
            <com.fms.fmsindia.plugins.CustomButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#ffffff"
                android:background="@drawable/border"
                android:id="@+id/closeTicket"

                />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>